<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/profile_image"
            android:gravity="center"
            />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/profileName"/>

            <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/profileEmail"/>

            <TextView
                android:id="@+id/radius_text_view"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/radius_seek_bar"
                android:max="100"
                android:progress="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_location"
            android:textOn="DISPLAY LOCATION"
            android:textOff="DISPLAY LOCATION"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

                <ToggleButton
                    android:id="@+id/toggle_button1"
                    android:textOn="@string/interests1"
                    android:textOff="@string/interests1"
                    />
                <ToggleButton
                    android:id="@+id/toggle_button2"
                    android:textOn="@string/interests2"
                    android:textOff="@string/interests2"
                    />
                <ToggleButton
                    android:id="@+id/toggle_button3"
                    android:textOn="@string/interests3"
                    android:textOff="@string/interests3"
                    />
                <ToggleButton
                    android:id="@+id/toggle_button4"
                    android:textOn="@string/interests4"
                    android:textOff="@string/interests4"
                    />
                <ToggleButton
                    android:id="@+id/toggle_button5"
                    android:textOn="@string/interests5"
                    android:textOff="@string/interests5"
                    />
                <ToggleButton
                    android:id="@+id/toggle_button6"
                    android:textOn="@string/interests6"
                    android:textOff="@string/interests6"
                    />
                <ToggleButton
                    android:id="@+id/toggle_button7"
                    android:textOn="@string/interests7"
                    android:textOff="@string/interests7"
                    />
                <ToggleButton
                    android:id="@+id/toggle_button8"
                    android:textOn="@string/interests8"
                    android:textOff="@string/interests8"
                    />
                <ToggleButton
                    android:id="@+id/toggle_button9"
                    android:textOn="@string/interests9"
                    android:textOff="@string/interests9"
                    />

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/button_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/button_delete_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</FrameLayout>